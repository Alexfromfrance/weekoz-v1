<div class="banner-obscur">
  <div class="container txtbanner">
    <div class="forms">
      <div class="escape-devise"><%= link_to "+", root_path%>
      </div>
      <h2 class=" animate__animated animate__bounce animate__delay-5s">Connection</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Se connecter" %>
      </div>
      <% end %>
      <div class="cursor lien">
        <%= link_to "Pas encore de compte ?", new_user_registration_path, class: "lien"%> <br>
        <%= link_to "Mot de passe oubliÃ© ?", new_user_password_path, class: "lien"%>
      </div>
    </div>
  </div>
</div>

